{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
    "rootDir": ".",
    "sourceMap": true,
    "listFiles": true,
    "newLine": "LF",
    "noEmitOnError": true
  },
  "filesGlob": [
    "./**/*.ts",
    "./**/*.tsx",
    "!./**/*.d.ts",
    "!./gulpfile.ts",
    "./typings/**/*.d.ts",
    "!./node_modules/**/*.ts",
    "./node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [],
  "files": [
		"./src/IBANTools.ts",
    "./test/IBANToolsTest.ts",
    "./typings/bundle.d.ts",
    "./typings/gulp/gulp.d.ts",
    "./typings/mocha/mocha.d.ts",
    "./node_modules/typescript/lib/lib.es6.d.ts"
  ]
}